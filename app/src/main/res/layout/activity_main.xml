<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C33659"
    android:foregroundTint="#C33659"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="289dp"
        android:layout_height="137dp"
        android:layout_marginStart="120dp"
        android:autoText="true"
        android:background="#FF9800"
        android:backgroundTint="#C33659"
        android:fontFamily="verdana"
        android:foregroundTint="#FEF7F7"
        android:shadowColor="#931111"
        android:text="Login to your account"
        android:textAlignment="center"
        android:textColor="#FCFBFB"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="verdana"
        android:text="User Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="383dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="#F5F1F1"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="469dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="205dp"
        android:layout_height="53dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#FBF7F7"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="469dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="205dp"
        android:layout_height="53dp"
        android:textColor="#FEFAFA"
        android:visibility="visible"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="383dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F8F7F6"
        android:text="Login"
        android:textAlignment="center"
        android:textColor="#C33659"
        android:textSize="34sp"
        app:strokeColor="#872A2A"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="593dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/ic_wave__1_"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="450dp"
        android:layout_height="213dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="3dp"
        android:background="@drawable/swg3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>